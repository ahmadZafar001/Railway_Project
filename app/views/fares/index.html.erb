<p id="notice"><%= notice %></p>

<h1>Listing Fares</h1>

<table class="table">
  <thead>
    <tr>
      <th>Train compartment</th>
      <th>Route</th>
      <th>Amount</th>
      <th colspan="3"><%= link_to 'New Fare', new_fare_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @fares.each do |fare| %>
      <tr>
        <td><%= fare.train_compartment.name %></td>
        <td><%= fare.route.name %></td>
        <td><%= fare.amount %></td>
        <td><%= link_to 'Edit', edit_fare_path(fare) %></td>
        <td><%= link_to 'Destroy', fare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


