<div class="container">
  
<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th colspan="3"> <%= link_to 'New Route', new_route_path %> </th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.source.name%></td>
        <td><%= route.destination.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>