<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table class="table">
  <thead>
    <tr>
      <th>CNIC</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Role</th>
      <th>Contacts</th>
      <th colspan="3"><%= link_to 'New Staff', new_staff_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.cnic %></td>
        <td><%= staff.fname %></td>
        <td><%= staff.lname %></td>
        <td><%= staff.gender %></td>
        <td><%= staff.age %></td>
        <td><%= staff.role %></td>
        <td><ul>
          <%staff.staff_contacts.each do |contact|%>
          <li><%= contact.phone_number%> , <%= contact.address%></li>
          <%end %>
        </ul></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


