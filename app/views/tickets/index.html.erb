<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Passenger</th>
      <th>Train compartment</th>
      <th>Route</th>
      <th>Fare</th>
      <th>Discount Type</th>
      <th>Discount %</th>
      <th>Final Fare</th>
      <th>Seat Number</th>
      <th colspan="3"><%= link_to 'New Ticket', new_ticket_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.passenger.name %></td>
        <td><%= ticket.train_compartment.name %></td>
        <td><%= ticket.route.name %></td>
        <td><%= ticket.fare %></td>
        <td><%= ticket.discount.name if ticket.discount.present? %></td>
        <td><%= ticket.discount.value if ticket.discount.present? %></td>
        <td><%= ticket.final_fare %></td>
        <td><%= ticket.seat_number %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


