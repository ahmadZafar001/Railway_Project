<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :passenger_id %><br>
    <%= f.select :passenger_id, options_for_select(Passenger.all.map{|x| [x.name, x.id]}),{required: true} %>
  </div>
  <div class="field">
    <%= f.label :train_compartment_id %><br>
    <%= f.select :train_compartment_id, options_for_select(TrainCompartment.all.map{|x| [x.name, x.id]}),{required: true} %>
  </div>
  <div class="field">
    <%= f.label :route_id %><br>
    <%= f.select :route_id, options_for_select(Route.all.map{|x| [x.name, x.id]}),{required: true} %>
  </div>
  <div class="field">
    <%= f.label :discount_id %><br>
    <%= f.select :discount_id, options_for_select(Discount.all.map{|x| [x.name, x.id]}),{include_blank: "select discount"} %>
  </div>
  <div class="field">
    <%= f.label :fare %><br>
    <%= f.number_field :fare,required: true %>
  </div>
  <div class="field">
    <%= f.label :final_fare %><br>
    <%= f.number_field :final_fare %>
  </div>
  <div class="field">
    <%= f.label :seat_number %><br>
    <%= f.number_field :seat_number,required: true %>
  </div>
  <div class="actions mt-2">
    <%= f.submit %>
  </div>
<% end %>
