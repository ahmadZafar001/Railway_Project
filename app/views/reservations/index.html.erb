<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Passenger</th>
      <th>Train compartment</th>
      <th>Seat number</th>
      <th>Reservation date</th>
      <th colspan="3"><%= link_to 'New Reservation', new_reservation_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.passenger.name %></td>
        <td><%= reservation.train_compartment.name %></td>
        <td><%= reservation.seat_number %></td>
        <td><%= reservation.reservation_date %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


