<p id="notice"><%= notice %></p>

<h1>Listing Passengers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Cnic</th>
      <th>Phone Numbers</th>
      <th colspan="3"><%= link_to 'New Passenger', new_passenger_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.fname %></td>
        <td><%= passenger.lname %></td>
        <td><%= passenger.age %></td>
        <td><%= passenger.gender %></td>
        <td><%= passenger.cnic %></td>
        <td><% passenger.passenger_contacts.each do |contact|%>
            <%= contact.phone_number %>,
            <%end%></td>
        <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
        <td><%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


